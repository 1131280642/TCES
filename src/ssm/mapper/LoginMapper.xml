<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ssm.dao.loginDao">

	<!-- 查询管理员账号是否存在 -->
	<select id="selectManage" parameterType="String" resultType="int">
	 	select count(1) from manage where username=#{username};
	</select>
 
	<!-- 查询学生账号是否存在 -->
	<select id="selectStudent" parameterType="String" resultType="int">
	 	select count(1) from student where student_no=#{student_no};
	</select>
 
	<!-- 查询教师账号是否存在 -->
	<select id="selectTeacher" parameterType="String" resultType="int">
	 	select count(1) from teacher where teacher=#{teacher};
	</select>
	 
	<!-- 查询管理员所有信息 -->
	<select id="getManage" parameterType="String" resultType="ssm.entity.manage">
	 	select * from manage where username=#{username};
	</select>
	
	<!-- 查询学生所有信息 -->
	<select id="getStudent" parameterType="String" resultType="ssm.entity.student">
	 	select * from student where student_no=#{student_no};
	</select>
	
	<!-- 查询学生所有信息 -->
	<select id="getStudent" parameterType="String" resultType="ssm.entity.student">
	 	select * from student where student_no=#{student_no};
	</select>
 
</mapper>